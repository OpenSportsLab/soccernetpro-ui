    width: 16px;
    height: 16px;
}

/* --- This part is the key functionality you were missing --- */

/* When QGroupBox is checkable but unchecked (collapsed),
 * target its internal QWidget content container.
 */
QGroupBox::checkable:!checked > QWidget {
    /* Set its max height to 0 to hide it completely */
    max-height: 0px;

    /* Remove margin, padding, and border to fully hide it */
    margin: 0;
    padding: 0;
    border: none;
}

/* When QGroupBox is checkable and checked (expanded),
 * restore the internal QWidget container.
 */
QGroupBox::checkable:checked > QWidget {
    /* Restore its max height (set to a sufficiently large value) */
    max-height: 9999px;
    
    /* (Optional) You can reapply padding when expanded */
    /* padding: 10px; */ 
}

/* --- QSlider style adjustments --- */

QSlider::groove:horizontal {
    /* Groove (the track) style */
    border: 1px solid #555;
    height: 6px; /* Track height (thickness) */
    background: #444;
    margin: 2px 0;
    border-radius: 3px;
}

QSlider::handle:horizontal {
    /* Handle (draggable node) style */
    background: #f2f6f8ff; /* Handle color */
    border: 1px solid #005699;
    width: 12px;  /* Handle width (size) */
    height: 12px; /* Handle height (size) */
    margin: -4px 0; /* Vertically centered */
    border-radius: 6px; /* Make the handle circular */
}

QSlider::handle:horizontal:hover {
    background: #00AACC; /* Hover color */
}

QSlider::sub-page:horizontal {
    /* The filled portion of the groove (progress section) */
    background: #007ACC;
    border-radius: 3px;
}
